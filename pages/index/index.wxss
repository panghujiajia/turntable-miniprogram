page {
    background: #fff;
}

/* 转盘 */

.container {
    margin: 120px auto 0;
    position: relative;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    box-shadow: 0 2px 3px #333, 0 0 2px #000;
}

.content {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    display: block;
    width: 300px;
    height: 300px;
    border-radius: inherit;
    background-clip: padding-box;
    background-color: #ffcb3f;
}

/* 分隔线 */

.litem {
    position: absolute;
    left: 150px;
    top: 0;
    width: 1px;
    height: 150px;
    background-color: yellow;
    overflow: hidden;
    -webkit-transform-origin: 50% 150px;
    transform-origin: 50% 150px;
}

.item {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    color: #333;
    font-weight: bold;
}

.item-text {
    position: relative;
    display: block;
    padding-top: 20px;
    margin: 0 auto;
    text-align: center;
    -webkit-transform-origin: 50% 150px;
    transform-origin: 50% 150px;
    font-size: 26rpx;
}

.btn {
    position: absolute;
    left: 50%;
    margin-left:-50px;
    margin-top:-50px;
    top:50%;
    z-index: 400;
    width: 100px;
    height: 100px;
    border-radius:50%;
    text-decoration: none;
}