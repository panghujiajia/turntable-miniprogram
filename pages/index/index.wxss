page {
    background: #fff;
}

/* 转盘 */
.container {
    margin: 120px auto 0;
    position: relative;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    box-shadow: 0 2px 3px #333, 0 0 2px #000;
}

.content {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    display: block;
    width: 300px;
    height: 300px;
    border-radius: inherit;
    background-clip: padding-box;
    background-color: #ffcb3f;
}
.list {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
    z-index: 9999;
}

.item {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    color: #e4370e;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.6);
}

.item-text {
    position: relative;
    display: block;
    padding-top: 20px;
    margin: 0 auto;
    text-align: center;
    -webkit-transform-origin: 50% 150px;
    transform-origin: 50% 150px;
    font-size: 26rpx;
}

/* 分隔线 */

.line {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
    z-index: 99;
}

.litem {
    position: absolute;
    left: 150px;
    top: 0;
    width: 1px;
    height: 150px;
    background-color: rgba(228, 55, 14, 0.4);
    overflow: hidden;
    -webkit-transform-origin: 50% 150px;
    transform-origin: 50% 150px;
}

.btn {
    position: absolute;
    left: 110px;
    top: 110px;
    z-index: 400;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    color: #f4e9cc;
    background-color: #e44025;
    line-height: 80px;
    text-align: center;
    font-size: 20px;
    text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.6);
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.6);
    text-decoration: none;
}

.btn::after {
    position: absolute;
    display: block;
    content: ' ';
    left: 10px;
    top: -46px;
    width: 0;
    height: 0;
    overflow: hidden;
    border-width: 30px;
    border-style: solid;
    border-color: transparent;
    border-bottom-color: #e44025;
}

.btn.disabled {
    pointer-events: none;
    background: #b07a7b;
    color: #ccc;
}

.btn.disabled::after {
    border-bottom-color: #b07a7b;
}

.gb-run {
    -webkit-transition: all 6s ease;
    transition: all 6s ease;
}
